@model GerProTP3.Models.Product

@{
    ViewData["Title"] = "Excluir Produto";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h2 class="card-title mb-0">
                    <i class="bi bi-exclamation-triangle"></i> @ViewData["Title"]
                </h2>
            </div>
            <div class="card-body">
                <h4 class="text-danger">Tem certeza que deseja excluir este produto?</h4>
                <p class="text-muted">Esta ação não pode ser desfeita.</p>

                <div class="alert alert-warning">
                    <h5>@Model.Name</h5>
                    <p class="mb-1"><strong>Descrição:</strong> @Model.Description</p>
                    <p class="mb-1"><strong>Preço:</strong> R$ @Model.Price</p>
                    <p class="mb-0"><strong>Estoque:</strong> @Model.StockQuantity unidades</p>
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="mt-4">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Confirmar Exclusão
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>