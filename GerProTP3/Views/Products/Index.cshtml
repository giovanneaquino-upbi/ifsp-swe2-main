@model IEnumerable<GerProTP3.Models.Product>

@{
    ViewData["Title"] = "Lista de Produtos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-list"></i> @ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Novo Produto
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <i class="bi bi-info-circle"></i> Nenhum produto cadastrado.
        <a asp-action="Create" class="alert-link">Clique aqui para adicionar o primeiro produto</a>.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Nome</th>
                    <th>Descrição</th>
                    <th>Preço</th>
                    <th>Estoque</th>
                    <th>Data de Cadastro</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.Price)</td>
                        <td>
                            <span class="badge @(item.StockQuantity > 0 ? "bg-success" : "bg-danger")">
                                @Html.DisplayFor(modelItem => item.StockQuantity)
                            </span>
                        </td>
                        <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                    <i class="bi bi-eye"></i> Detalhes
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil"></i> Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Excluir
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}